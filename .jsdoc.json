{
    "opts": {
       "template": "templates/default",
        "encoding": "utf8",
        "destination": "./docs/api/",
        "recurse": true,
        "readme": "./README.md"
    },
    "sourceType": "module",
    "source": {
        "include": [
            "./src/"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "markdown": {
        "hardwrap": true
    },
    "templates": {
        "default": {
            "outputSourceFiles": false,
            "includeDate": false
        }
    }
}
